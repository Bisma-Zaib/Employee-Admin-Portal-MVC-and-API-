@model IEnumerable<EmployeeAdminPortal.Model.Entities.Employee>

@{
    ViewData["Title"] = "Employees";
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
        <br>
        <small>Showing cached/local data instead.</small>
    </div>
}

<div class="container mt-4">
    <h1>Employee List</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">No employees found.</div>
    }
    else
    {
        <p>
            <a asp-action="Create" class="btn btn-success">Add New Employee</a>
        </p>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rowNumber = 1;
                }
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@(rowNumber++)</td>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>@employee.Salary.ToString("C")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>